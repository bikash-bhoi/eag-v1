{
    "manifest_version": 3,
    "name": "Email Summary",
    "version": "1.0",
    "description": "Analyzes links using a local Flask service and Gemini, then sends an email.",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}